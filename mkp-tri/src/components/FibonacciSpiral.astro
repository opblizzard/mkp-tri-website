---
import { generateSpiralPoints } from '../omni/QFSTDS';

const points = generateSpiralPoints(12);
---

<figure class="glass-panel border-glow relative overflow-hidden px-6 py-6">
  <svg viewBox="-2 -2 4 4" class="h-64 w-full" role="img" aria-label="Fibonacci spiral schematic">
    <defs>
      <linearGradient id="spiral" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#00f0ff" />
        <stop offset="100%" stop-color="#c1925a" />
      </linearGradient>
    </defs>
    <path
      d={points
        .map((point, index) => `${index === 0 ? 'M' : 'L'} ${point.x.toFixed(3)} ${point.y.toFixed(3)}`)
        .join(' ')}
      stroke="url(#spiral)"
      stroke-width="0.04"
      fill="none"
    />
    {points.map((point, index) => (
      <circle cx={point.x} cy={point.y} r={Math.max(point.radius / 12, 0.01)} fill="#74f2ce" opacity={(index + 2) / (points.length + 2)} />
    ))}
  </svg>
  <figcaption class="text-xs uppercase tracking-[0.35em] text-white/60">
    Quantum Fibonacci scheduler output
  </figcaption>
</figure>
