---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, className = '' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class={className + ' bg-codex-bg min-h-screen'}>
    <Header />
    <main class="glass max-w-full sm:max-w-4xl mx-auto mt-28 sm:mt-32 mb-8 sm:mb-12 px-2 sm:px-6 py-6 sm:py-10 shadow-xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>
