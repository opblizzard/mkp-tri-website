---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Codex - MKP TRI', description } = Astro.props;
---

<BaseLayout title={title} description={description} className="bg-codex min-h-screen">
  <section class="flex flex-col gap-10">
    <slot />
  </section>
</BaseLayout>
